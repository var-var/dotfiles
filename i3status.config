general {
        output_format = "i3bar"
        colors = true
        interval = 5
        color_good = "#13bf91"
}

#order += "ipv6"
order += "disk /"
#order += "run_watch DHCP"
#order += "run_watch VPNC"
#order += "path_exists VPN"
#order += "wireless wlan0"
order += "ethernet enp2s0"
#order += "battery 0"
#order += "cpu_temperature 0"
order += "memory"
#order += "load"
order += "cpu_usage"
order += "volume master"
order += "tztime Yekaterinburg"
#order += "tztime berlin"


volume master {
        format = "‚ô™: %volume"
        format_muted = "üîá muted (%volume)"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

cpu_usage {
        format = "CPU load: %usage"
}

wireless wlan0 {
        format_up = "W: (%quality at %essid, %bitrate) %ip"
        format_down = "W: down"
}

ethernet enp2s0 {
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

battery 0 {
        format = "%status %percentage %remaining %emptytime"
        format_down = "No battery"
        status_chr = "‚ö° CHR"
        status_bat = "üîã BAT"
        status_unk = "? UNK"
        status_full = "‚òª FULL"
#       status_idle = "‚òª IDLE"
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 10
}

run_watch DHCP {
        pidfile = "/var/run/dhclient*.pid"
}

run_watch VPNC {
        # file containing the PID of a vpnc process
        pidfile = "/var/run/vpnc/pid"
}

path_exists VPN {
        # path exists when a VPN tunnel launched by nmcli/nm-applet is active
        path = "/proc/sys/net/ipv4/conf/tun0"
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
        hide_if_equals_localtime = true
}

tztime Yekaterinburg {
        format = "%d-%m-%Y %H:%M"
        timezone = "Asia/Yekaterinburg"
}

load {
        format = "%5min"
}

cpu_temperature 0 {
        format = "T: %degrees ¬∞C"
        path = "/sys/devices/platform/coretemp.0/temp1_input"
}

memory {
        format = "RAM: %free"
        threshold_degraded = "10%"
        format_degraded = "‚ùóMEMORY‚ùó: %free"
}

disk "/" {
        format = "SSD: %avail"
        low_threshold = "3"
        format_below_threshold = " ‚ùóWarning‚ùó: %avail"
}

read_file uptime {
        path = "/proc/uptime"
}
